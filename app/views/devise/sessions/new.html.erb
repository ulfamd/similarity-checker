<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="col-md-3">
    <div class="form-group bmd-form-group">
    <%= f.label :email, class: "bmd-label-floating" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
    </div>
  </div>

  <div class="col-md-3">
    <div class="form-group bmd-form-group">
    <%= f.label :password, class: "bmd-label-floating" %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="col-md-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "bmd-label-floating"  %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
