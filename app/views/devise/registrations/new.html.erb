<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="col-md-3">
    <div class="form-group bmd-form-group">
    <%= f.label :email, class: "bmd-label-floating" %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="col-md-3">
    <div class="form-group bmd-form-group">
    <%= f.label :password, class: "bmd-label-floating" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="col-md-3">
    <div class="form-group bmd-form-group">
    <%= f.label :password_confirmation, class: "bmd-label-floating" %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
